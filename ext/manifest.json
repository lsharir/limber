{
  "name": "Limber",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Refresh your posture",
  "homepage_url": "http://lsharir.com",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png"
    },
    "default_title": "Limber",
    "default_popup": "src/popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/eventPage.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "src/popup/popup.html",
    "chrome_style": true
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "idle"
  ]
}